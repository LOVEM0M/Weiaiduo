<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_f5"
            android:orientation="vertical">

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:id="@+id/fl_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="店铺头像"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="end|center_vertical"
                    android:scaleType="center"
                    android:src="@drawable/ic_right_arrow_small" />

                <com.miyin.zhenbaoqi.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_50"
                    tools:src="@color/black" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="店铺名字"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入店铺名字"
                    android:maxLength="10"
                    android:paddingEnd="@dimen/dp_14"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="店铺介绍"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_14" />

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_shop_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="请输入店铺介绍"
                    android:padding="@dimen/dp_14"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="店铺微信号"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_shop_wx"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入店铺微信号"
                    android:paddingEnd="@dimen/dp_14"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="联系手机号"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_phone"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入联系手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingEnd="@dimen/dp_14"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="退货联系人"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_consignee"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入联系人"
                    android:maxLength="11"
                    android:paddingEnd="@dimen/dp_14"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="退货地址"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ship_address"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end|center_vertical"
                    android:hint="请选择退货地址"
                    android:paddingEnd="@dimen/dp_14"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_14"
                app:rightPadding="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="start|top"
                    android:hint="请输入地址"
                    android:padding="@dimen/dp_14"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:text="店铺背景图"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_14" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_margin="@dimen/dp_14"
                    android:background="@drawable/ic_shop_auth_bg"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_select_identity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="身份选择"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:drawableEnd="@drawable/ic_bottom_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="end"
                    android:hint="请选择身份信息"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_14">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_left"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_14"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:background="@color/black" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_middle"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_14"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:background="@color/black" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_14"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:background="@color/black" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_select_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:text="主营类目"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:drawableEnd="@drawable/ic_bottom_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="end"
                    android:hint="请选择主营类目"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_goods_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_14"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_goods_license"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_14"
                    android:background="@drawable/ic_goods_auth"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <com.noober.background.view.BLButton
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_margin="@dimen/dp_18"
                android:text="确认提交认证"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:bl_corners_radius="@dimen/dp_44"
                app:bl_solid_color="#E83A39" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>