<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_76"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:background="@color/text_99" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_header_vip"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_43"
            android:background="@drawable/ic_vip"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="@id/iv_photo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="@id/iv_photo"
            tools:text="捞面和田玉工作室" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_warranty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_4"
            android:drawableStart="@drawable/ic_auction_warranty"
            android:drawablePadding="@dimen/dp_4"
            android:includeFontPadding="false"
            android:textColor="#9D9D9D"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/iv_photo"
            app:layout_constraintLeft_toRightOf="@id/iv_photo"
            tools:text="质保金：1000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_attention_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawableStart="@drawable/ic_collect_auction_select"
            android:drawablePadding="@dimen/dp_4"
            android:includeFontPadding="false"
            android:textColor="#9D9D9D"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/tv_warranty"
            app:layout_constraintLeft_toRightOf="@id/tv_warranty"
            tools:text="关注数：1.1万" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_attention"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_11"
            android:gravity="center"
            android:text="+ 关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            app:bl_corners_radius="@dimen/dp_24"
            app:bl_solid_color="#E93B44"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shop_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_f5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_13"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        tools:text="标题信息和田玉税点挂件 配国检证书" />

    <com.miyin.zhenbaoqi.widget.ShowAllTextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/dp_5"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_20"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_10"
        tools:text="翡翠吊坠\n平安服\n寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安寓意平平安安" />

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        app:indicator_drawable_selected="@drawable/shape_red_circle"
        app:indicator_drawable_unselected="@drawable/shape_white_circle"
        app:is_auto_play="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:background="#F8E5E7">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_auction_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_11"
            android:drawableStart="@drawable/ic_auction"
            android:drawablePadding="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="正在竞拍"
            android:textColor="#E85768"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_19"
            android:textColor="#E85768"
            android:textSize="@dimen/sp_12" />

    </FrameLayout>

    <View
        android:id="@+id/view_jianzhenbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_jianzhenbao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:text="服务"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:drawableStart="@drawable/ic_check_gold"
            android:drawablePadding="@dimen/dp_10"
            android:text="全国包邮"
            android:textColor="#C2A796"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:drawableStart="@drawable/ic_check_gold"
            android:drawablePadding="@dimen/dp_10"
            android:text="七天退换"
            android:textColor="#C2A796"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refresh_price_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_8"
            android:drawableStart="@drawable/ic_refresh"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10"
            tools:text="更新出价\n14:17:29" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="起"
            android:textColor="#F56E75"
            android:textSize="@dimen/sp_10"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_stroke_color="#F56E75"
            app:bl_stroke_width="@dimen/dp_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_init_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="¥7"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="加"
            android:textColor="#F56E75"
            android:textSize="@dimen/sp_10"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_stroke_color="#F56E75"
            app:bl_stroke_width="@dimen/dp_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="¥/次"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="保"
            android:textColor="#F56E75"
            android:textSize="@dimen/sp_10"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_stroke_color="#F56E75"
            app:bl_stroke_width="@dimen/dp_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_security_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="¥7"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_guide_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10"
            tools:text="指导价：" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:text="收藏"
            android:textSize="@dimen/sp_9"
            app:bl_position="top"
            app:bl_selected_drawable="@drawable/ic_collect_auction_select"
            app:bl_selected_textColor="#DF4F65"
            app:bl_unSelected_drawable="@drawable/ic_collect_auction_normal"
            app:bl_unSelected_textColor="@color/text_66" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:layout_marginEnd="@dimen/dp_16"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_solid_color="@color/bg_f5" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_f5" />

    <include layout="@layout/layout_shop_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_f5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_8"
            android:text="拍卖说明"
            android:textColor="#202020"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:drawableEnd="@drawable/ic_right_arrow_small"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_15"
            android:text="更多说明"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@color/line_eb" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:background="@color/white"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_auction_first"
            android:drawablePadding="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:text="参与出价"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/ic_arrow_gold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_auction_second"
            android:drawablePadding="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:text="价高者得"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/ic_arrow_gold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_auction_third"
            android:drawablePadding="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:text="支付费用"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/ic_arrow_gold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_auction_forth"
            android:drawablePadding="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:text="签收宝贝"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_f5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_8"
        android:text="店铺拍品"
        android:textColor="#202020"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
