<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_159"
        android:layout_marginTop="@dimen/dp_13"
        app:delay_time="3000"
        app:indicator_drawable_selected="@drawable/shape_white_circle"
        app:indicator_drawable_unselected="@drawable/white_radius" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginBottom="@dimen/dp_17"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15">

            <com.noober.background.view.BLView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_6"
                app:bl_corners_radius="@dimen/dp_15"
                app:bl_gradient_endColor="#FFB7B7"
                app:bl_gradient_startColor="#FFE7DD" />

            <com.noober.background.view.BLView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                app:bl_corners_radius="@dimen/dp_8"
                app:bl_gradient_endColor="#FFDBB7"
                app:bl_gradient_startColor="#FEF7D1" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="热门直播推荐"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15">

            <com.noober.background.view.BLView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                app:bl_corners_radius="@dimen/dp_15"
                app:bl_gradient_endColor="#FFB7B7"
                app:bl_gradient_startColor="#FFE7DD" />

            <com.noober.background.view.BLView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_12"
                app:bl_corners_radius="@dimen/dp_8"
                app:bl_gradient_endColor="#FFDBB7"
                app:bl_gradient_startColor="#FEF7D1" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
