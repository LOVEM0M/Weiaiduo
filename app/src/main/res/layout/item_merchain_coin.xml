<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_103"
    android:layout_marginEnd="@dimen/dp_14"
    android:layout_marginStart="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_12"
    app:bl_corners_radius="@dimen/dp_10"
    app:bl_solid_color="@color/white"
    app:bl_stroke_color="@color/line_eb"
    app:bl_stroke_width="@dimen/dp_1"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_70"
        android:layout_marginStart="@dimen/dp_17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:text="免费的卖家名额" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_12"
        android:drawablePadding="@dimen/dp_7"
        android:drawableStart="@drawable/ic_exchange_record_small"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="#626262"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        tools:text="5000" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_exchange"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center"
        android:text="立即兑换"
        android:textColor="#FF692C"
        android:textSize="@dimen/sp_12"
        app:bl_corners_radius="@dimen/dp_25"
        app:bl_stroke_color="#FF692C"
        app:bl_stroke_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintRight_toRightOf="parent" />

</com.noober.background.view.BLConstraintLayout>
