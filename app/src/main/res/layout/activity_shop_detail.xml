<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_135"
                        android:scaleType="centerCrop"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.noober.background.view.BLLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_122"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:bl_corners_topLeftRadius="@dimen/dp_8"
                        app:bl_corners_topRightRadius="@dimen/dp_8"
                        app:bl_solid_color="@color/white"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_50"
                            android:textColor="@color/text_33"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            tools:text="玉茗堂工作室" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold"
                            tools:text="主营翡翠" />

                        <com.noober.background.view.BLTextView
                            android:id="@+id/tv_attention"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginTop="@dimen/dp_15"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:bl_corners_radius="@dimen/dp_24"
                            app:bl_solid_color="#FF3D3D" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_85">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_warranty"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/dp_10"
                                android:text="质保金"
                                android:textColor="@color/text_99"
                                android:textSize="@dimen/sp_12" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_shop_impression"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/dp_10"
                                android:text="店铺印象"
                                android:textColor="@color/text_99"
                                android:textSize="@dimen/sp_12" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_attention_count"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/dp_10"
                                android:text="关注数"
                                android:textColor="@color/text_99"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </com.noober.background.view.BLLinearLayout>

                    <com.miyin.zhenbaoqi.widget.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginTop="@dimen/dp_80"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="@dimen/dp_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_f5" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_15">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_14"
                        android:includeFontPadding="false"
                        android:text="店铺印象"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_shop_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|center_vertical"
                        android:drawablePadding="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_20"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_12"
                        tools:text="830条" />

                </FrameLayout>

                <com.miyin.zhenbaoqi.widget.flow_layout.TagFlowLayout
                    android:id="@+id/flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_13" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_f5"
                    android:paddingBottom="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_30"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_live"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginStart="@dimen/dp_9"
                        android:layout_marginTop="@dimen/dp_9">

                        <com.noober.background.view.BLLinearLayout
                            android:layout_width="@dimen/dp_56"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:bl_corners_radius="@dimen/dp_2"
                            app:bl_gradient_angle="0"
                            app:bl_gradient_endColor="#E93131"
                            app:bl_gradient_startColor="#FF8335">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/dp_9"
                                android:layout_height="@dimen/dp_9"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:background="@color/white" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="直播中"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_11" />

                        </com.noober.background.view.BLLinearLayout>

                        <com.noober.background.view.BLTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingEnd="@dimen/dp_9"
                            android:paddingStart="@dimen/dp_9"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13"
                            app:bl_corners_bottomRightRadius="@dimen/dp_2"
                            app:bl_corners_topRightRadius="@dimen/dp_2"
                            app:bl_solid_color="#B3FFFFFF"
                            tools:text="988人正在观看" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginStart="@dimen/dp_12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        tools:text="翡翠彩宝成品专营" />

                </FrameLayout>

            </LinearLayout>

            <com.miyin.zhenbaoqi.widget.SlidingTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                app:tl_indicator_color="#EA1A1A"
                app:tl_indicator_height="@dimen/dp_2"
                app:tl_indicator_width="@dimen/dp_49"
                app:tl_normal_text_color="@color/text_99"
                app:tl_normal_text_size="@dimen/sp_15"
                app:tl_select_text_color="#EA1A1A"
                app:tl_tab_space_equal="true" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.miyin.zhenbaoqi.widget.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
