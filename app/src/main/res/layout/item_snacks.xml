<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_11"
    tools:ignore="HardcodedText,RtlSymmetry">


    <com.noober.background.view.BLLinearLayout
        android:id="@+id/ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:bl_corners_bottomLeftRadius="@dimen/dp_8"
        app:bl_corners_bottomRightRadius="@dimen/dp_8"
        app:bl_solid_color="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_127"
            android:paddingHorizontal="@dimen/dp_17"
            android:paddingVertical="@dimen/dp_12"
            android:scaleType="fitXY"
            tools:background="@color/picture_color_white"
            android:layout_marginVertical="@dimen/dp_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:text="上等好货和田玉貔貅招"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginBottom="@dimen/dp_15">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="￥"
                android:textColor="#F92728"
                android:textSize="@dimen/sp_20" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_black_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="..."
                android:textColor="#cccccc"
                android:textSize="@dimen/sp_40"
                android:paddingHorizontal="@dimen/dp_5"/>

        </LinearLayout>



    </com.noober.background.view.BLLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
