<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_operate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/sp_10"
        android:background="@color/white"
        android:drawableEnd="@drawable/ic_right_arrow_small"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        tools:text="聊天" />

    <FrameLayout
        android:id="@+id/fl_chat_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/sp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_right_arrow_small"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:text="聊天列表"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_not_read_message"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_35"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:visibility="invisible"
            app:bl_corners_radius="@dimen/dp_15"
            app:bl_solid_color="#F74C32"
            tools:text="99+" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/sp_50"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        android:text="退出登录"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
