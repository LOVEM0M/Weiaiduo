<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/ll_linear"
        android:layout_width="@dimen/dp_284"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="#A13333">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_quality_shop"
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_39"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@drawable/ic_goods_share_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.miyin.zhenbaoqi.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_marginStart="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/text_99" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_name"
                android:layout_width="@dimen/dp_130"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@id/iv_avatar"
                app:layout_constraintTop_toTopOf="@id/iv_avatar"
                tools:text="缅甸源头时长代购翡翠原石" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_fans_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#D5A5A5"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
                tools:text="23006粉丝" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_284"
            android:layout_margin="@dimen/dp_3"
            android:scaleType="centerCrop"
            tools:background="@color/text_99" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginStart="@dimen/dp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/text_99" />

            <com.miyin.zhenbaoqi.widget.CircleImageView
                android:id="@+id/iv_wx_avatar"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_5"
                app:layout_constraintLeft_toRightOf="@id/iv_qrcode"
                app:layout_constraintTop_toTopOf="@id/iv_qrcode"
                tools:src="@color/text_99" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_command"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_7"
                android:includeFontPadding="false"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_11"
                app:layout_constraintBottom_toBottomOf="@id/iv_wx_avatar"
                app:layout_constraintLeft_toRightOf="@id/iv_wx_avatar"
                app:layout_constraintTop_toTopOf="@id/iv_wx_avatar"
                tools:text="微信昵称 向你推荐" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:includeFontPadding="false"
                android:text="主播太火爆了，快来！"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/iv_wx_avatar"
                app:layout_constraintTop_toBottomOf="@id/iv_wx_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="长按扫码进入撩主播"
                android:textColor="#FF8A54"
                android:textSize="@dimen/sp_9"
                app:layout_constraintBottom_toBottomOf="@id/iv_qrcode"
                app:layout_constraintLeft_toLeftOf="@id/iv_wx_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_54"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_goods_share_copy"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="复制链接"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_goods_share_friend"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="分享好友"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share_friend_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_goods_share_friends_circle"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="分享朋友圈"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_save_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_goods_share_save"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="保存图片"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

</LinearLayout>