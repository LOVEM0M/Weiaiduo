<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_125"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_7"
    app:cardUseCompatPadding="false">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_12"
        tools:background="@color/bg_f5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_124"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_12"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="产品名字产品名字11" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_124"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_marginEnd="@dimen/dp_12"
        android:includeFontPadding="false"
        android:textColor="@color/text_88"
        android:textSize="@dimen/sp_10"
        tools:text="副标题信息11副标题信息11副标题信息11" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/dp_124"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_16"
        android:includeFontPadding="false"
        android:textColor="#DD3131"
        android:textSize="@dimen/sp_12"
        tools:text="￥300" />

    <com.noober.background.view.BLTextView
        android:layout_width="@dimen/dp_57"
        android:layout_height="@dimen/dp_21"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8"
        app:bl_corners_radius="@dimen/dp_21"
        app:bl_solid_color="#FF4444" />

</androidx.cardview.widget.CardView>
