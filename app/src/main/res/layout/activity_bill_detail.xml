<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/dp_13"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        tools:text="张珊自己消费情况" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_26"
        tools:text="-1000.00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        tools:text="交易成功" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_20"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="购买商品\n商家信息\n订单金额\n支付时间\n订单号\n付款方式\n收货信息" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="@dimen/dp_266"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="end"
            android:lineSpacingExtra="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="玉石字画 X1\n张珊玉石书画店\n1000.00\n2019-12-01 15:20\n5646846464\n微信支付\n浙江省杭州市石桥路80号经纬创意园1号楼" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            app:layout_constraintRight_toRightOf="@id/tv_desc"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            tools:text="张大白 15888888888" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
