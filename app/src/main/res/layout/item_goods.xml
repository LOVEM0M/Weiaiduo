<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_175" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_175"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        android:textColor="#010101"
        android:textSize="@dimen/sp_12"
        tools:text="直播间副标题限九字" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="@dimen/dp_175"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="@dimen/dp_4"
        android:drawableStart="@drawable/ic_auction_record"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_5"
        android:textColor="#EA2F30"
        android:textSize="@dimen/sp_10"
        tools:text="当前" />

    <com.noober.background.view.BLLinearLayout
        android:layout_width="@dimen/dp_175"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_10"
        app:bl_corners_bottomLeftRadius="@dimen/dp_6"
        app:bl_corners_bottomRightRadius="@dimen/dp_6"
        app:bl_solid_color="@color/white">

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_6"
            android:gravity="center"
            android:text="特惠"
            android:textColor="#EA2F30"
            android:textSize="@dimen/sp_8"
            app:bl_corners_radius="@dimen/dp_34"
            app:bl_stroke_color="#EB3839"
            app:bl_stroke_width="@dimen/dp_1" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_15"
            android:gravity="center"
            android:text="热门"
            android:textColor="#EA2F30"
            android:textSize="@dimen/sp_8"
            app:bl_corners_radius="@dimen/dp_34"
            app:bl_stroke_color="#EB3839"
            app:bl_stroke_width="@dimen/dp_1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_7"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/dp_8"
            android:includeFontPadding="false"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10"
            tools:text="已出价" />

    </com.noober.background.view.BLLinearLayout>

</LinearLayout>
