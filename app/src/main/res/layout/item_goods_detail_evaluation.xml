<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_17"
    android:paddingBottom="@dimen/dp_11">
    <ImageView
        android:id="@+id/iv_header_evaluation"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:src="@drawable/default_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_name_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贵宾"
        android:textColor="#2E2237"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/iv_header_evaluation"
        app:layout_constraintTop_toTopOf="@id/iv_header_evaluation"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"/>
    <TextView
        android:id="@+id/tv_content_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好用，正品"
        android:textColor="#2E2237"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/iv_header_evaluation"
        app:layout_constraintTop_toBottomOf="@id/iv_header_evaluation"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/iv_content_evaluation"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_86"
        android:src="@drawable/default_head"
        app:layout_constraintLeft_toLeftOf="@id/tv_content_evaluation"
        app:layout_constraintTop_toBottomOf="@id/tv_content_evaluation"
        android:layout_marginTop="@dimen/dp_12"/>
</androidx.constraintlayout.widget.ConstraintLayout>
