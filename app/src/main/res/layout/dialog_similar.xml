<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/dp_10"
    tools:ignore="HardcodedText"
    android:gravity="center">

    <com.noober.background.view.BLButton
        android:id="@+id/bt_add_cart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:paddingHorizontal="@dimen/dp_17"
        android:paddingVertical="0dp"
        android:text="加入购物车"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:bl_corners_radius="@dimen/dp_40"
        app:bl_solid_color="#FF0000" />
    <com.noober.background.view.BLButton
        android:id="@+id/bt_similar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:paddingHorizontal="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingVertical="0dp"
        android:text="找相似"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:bl_corners_radius="@dimen/dp_40"
        app:bl_solid_color="#FF0000" /><com.noober.background.view.BLButton
        android:id="@+id/bt_lose_interest"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:paddingHorizontal="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_19"
        android:paddingVertical="0dp"
        android:text="对此产品不感兴趣"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        app:bl_corners_radius="@dimen/dp_40"
        app:bl_solid_color="#ADADAD" />

</com.noober.background.view.BLLinearLayout>
