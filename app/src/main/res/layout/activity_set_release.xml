<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="秒杀价："
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_price"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_34"
            android:background="@color/white"
            android:gravity="center_vertical|end"
            android:hint="请输入秒杀价"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/dp_14"
            android:textColor="@color/black"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="输入原价："
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_original_price"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_34"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="（选填）"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_brokerage_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_14"
            android:includeFontPadding="false"
            android:text="分佣金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_brokerage_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp_14"
            android:drawableEnd="@drawable/ic_right_arrow_small"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical|end"
            android:hint="请设置分佣金额"
            android:includeFontPadding="false"
            android:paddingEnd="@dimen/dp_14"
            android:text="15%"
            android:textColor="@color/black"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:includeFontPadding="false"
            android:text="高级设置"
            android:textColor="#A1A1A1"
            android:textSize="@dimen/sp_16" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="服务"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">

            <com.noober.background.view.BLCheckBox
                android:id="@+id/rb_country"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_6"
                android:text="全国包邮"
                android:textColor="@color/text_54"
                android:textSize="@dimen/sp_14"
                app:bl_checked_button_drawable="@drawable/ic_release_select"
                app:bl_unChecked_button_drawable="@drawable/ic_release_normal" />

            <com.noober.background.view.BLCheckBox
                android:id="@+id/rb_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_20"
                android:checked="true"
                android:paddingStart="@dimen/dp_6"
                android:text="7天退换"
                android:textColor="@color/text_54"
                android:textSize="@dimen/sp_14"
                app:bl_checked_button_drawable="@drawable/ic_release_select"
                app:bl_unChecked_button_drawable="@drawable/ic_release_normal" />

        </LinearLayout>

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="库存"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <com.miyin.zhenbaoqi.widget.AddedView
            android:id="@+id/ll_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="类型"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <com.noober.background.view.BLRadioButton
                android:id="@+id/rb_forever"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_20"
                android:checked="true"
                android:paddingStart="@dimen/dp_6"
                android:text="永久"
                android:textColor="@color/text_54"
                android:textSize="@dimen/sp_14"
                app:bl_checked_button_drawable="@drawable/ic_release_select"
                app:bl_unChecked_button_drawable="@drawable/ic_release_normal" />

            <com.noober.background.view.BLRadioButton
                android:id="@+id/rb_limit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_20"
                android:paddingStart="@dimen/dp_6"
                android:text="限时秒杀"
                android:textColor="@color/text_54"
                android:textSize="@dimen/sp_14"
                app:bl_checked_button_drawable="@drawable/ic_release_select"
                app:bl_unChecked_button_drawable="@drawable/ic_release_normal" />

        </RadioGroup>

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:id="@+id/fl_limit_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:visibility="gone"
        app:leftPadding="@dimen/dp_16"
        app:lineColor="@color/line_ee"
        app:rightPadding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="限时时间"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_limit_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp_14"
            android:drawableEnd="@drawable/ic_right_arrow_small"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center_vertical"
            android:hint="请设置限时时间"
            android:includeFontPadding="false"
            android:paddingEnd="@dimen/dp_14"
            android:textColor="@color/black"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:text="限购"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <com.miyin.zhenbaoqi.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_15"
            app:sb_checked_color="@color/theme_dark_purple"
            app:sb_show_indicator="false" />

    </FrameLayout>

    <com.noober.background.view.BLButton
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_18"
        android:text="确认发布"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:bl_corners_radius="@dimen/dp_6"
        app:bl_solid_color="@color/theme_dark_purple" />

</LinearLayout>
