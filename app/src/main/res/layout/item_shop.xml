<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/text_99" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:text="鸿记珠宝品牌" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toLeftOf="@id/tv_entry_shop"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="厚道营商，取利收益厚道营商，取利收益" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_entry_shop"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_17"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="进店逛逛"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_12"
        app:bl_corners_radius="@dimen/dp_4"
        app:bl_stroke_color="#E90428"
        app:bl_stroke_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_middle"
        app:layout_constraintTop_toBottomOf="@id/iv_cover" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_left"
        app:layout_constraintRight_toRightOf="@id/iv_left"
        app:layout_constraintTop_toBottomOf="@id/iv_left"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_15"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_left_title"
        app:layout_constraintTop_toBottomOf="@id/tv_left_title"
        tools:text="9800.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_middle"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_112"
        app:layout_constraintLeft_toRightOf="@id/iv_left"
        app:layout_constraintRight_toLeftOf="@id/iv_right"
        app:layout_constraintTop_toTopOf="@id/iv_left" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_middle_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_middle"
        app:layout_constraintRight_toRightOf="@id/iv_middle"
        app:layout_constraintTop_toBottomOf="@id/iv_middle"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_middle_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_15"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_middle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_middle_title"
        tools:text="9800.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_112"
        app:layout_constraintLeft_toRightOf="@id/iv_middle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_left" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_14"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_right"
        app:layout_constraintRight_toRightOf="@id/iv_right"
        app:layout_constraintTop_toBottomOf="@id/iv_right"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_15"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_right_title"
        app:layout_constraintTop_toBottomOf="@id/tv_right_title"
        tools:text="9800.0" />

</androidx.constraintlayout.widget.ConstraintLayout>