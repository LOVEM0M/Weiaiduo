<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">

    <com.noober.background.view.BLLinearLayout
        android:layout_width="@dimen/dp_243"
        android:layout_height="@dimen/dp_122"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_solid_color="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_42"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_11"
            tools:text="缅甸源头珠宝" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:includeFontPadding="false"
            android:text="喜欢就关注一下呗"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_10" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_attention"
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_solid_color="#C8322A" />

    </com.noober.background.view.BLLinearLayout>

    <com.miyin.zhenbaoqi.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        tools:src="@color/text_99" />

</FrameLayout>
