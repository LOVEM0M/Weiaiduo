<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:id="@+id/fl_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="店铺头像"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <com.miyin.zhenbaoqi.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/dp_15"
                    tools:src="@color/text_33" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="店铺名称"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_name"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请填写店铺名(15字以内)"
                    android:maxLength="15"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="店铺介绍"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_introduce"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请填写店铺介绍(35字以内)"
                    android:maxLength="35"
                    android:paddingEnd="@dimen/dp_15"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="店主微信号"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_wx"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入微信号"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="联系手机号"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_phone"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <com.miyin.zhenbaoqi.widget.LineFrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                app:leftPadding="@dimen/dp_15"
                app:rightPadding="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="退货收货人"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_consignee"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入退货收货人"
                    android:maxLength="11"
                    android:paddingEnd="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </com.miyin.zhenbaoqi.widget.LineFrameLayout>

            <FrameLayout
                android:id="@+id/fl_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sp_14"
                    android:text="退货地址"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_right_arrow_small"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical|end"
                    android:hint="请选择退货地址"
                    android:paddingEnd="@dimen/dp_15"
                    android:textColor="@color/text_33"
                    android:textColorHint="@color/text_99"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@color/white"
                android:gravity="start|top"
                android:hint="请填写详细地址，不少于5字"
                android:padding="@dimen/dp_15"
                android:textColor="@color/text_33"
                android:textColorHint="@color/text_99"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:drawableEnd="@drawable/ic_right_arrow_small"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_14"
                android:paddingStart="@dimen/dp_14"
                android:text="店铺背景图"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_30"
                android:paddingTop="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_30"
                    android:background="@drawable/ic_shop_auth_bg"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <com.noober.background.view.BLButton
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8"
                android:text="保存信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                app:bl_corners_radius="@dimen/dp_45"
                app:bl_gradient_angle="0"
                app:bl_gradient_endColor="#F02C2C"
                app:bl_gradient_startColor="#FB4A4A" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
