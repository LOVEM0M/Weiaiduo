<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_13"
        android:text="新用户（含普通粉丝）领取福袋后会成为你的专属粉丝，终身绑定"
        android:textColor="#555555"
        android:textSize="@dimen/sp_10" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_13"
            android:text="总金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_money"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:inputType="number"
            android:paddingEnd="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            tools:text="10" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_13"
        android:text="由支付渠道收取1%手续费，过期后剩余金额自动退还至余额"
        android:textColor="#555555"
        android:textSize="@dimen/sp_10" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_13"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:text="福袋个数"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_count"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            tools:text="10" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_13"
        android:text="最大支持5000个，每个不小于0.5元"
        android:textColor="#555555"
        android:textSize="@dimen/sp_10" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_13"
            android:text="分享福袋"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <com.miyin.zhenbaoqi.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_12"
            app:sb_show_indicator="false" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_13"
        android:paddingStart="@dimen/dp_13"
        android:text="1、开启后，其他玩家转发此福袋，该玩家可为自己绑定专属粉丝；但绑定的专属粉丝会自动关注发红包玩家的店铺；\n2、如不开启，其他玩家转发此福袋后无法绑定专属粉丝。"
        android:textColor="#555555"
        android:textSize="@dimen/sp_10" />

    <com.miyin.zhenbaoqi.widget.NoPaddingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_65"
        android:textSize="@dimen/sp_40"
        tools:text="0.00" />

    <com.noober.background.view.BLButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:text="塞钱进福袋"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:bl_corners_radius="@dimen/dp_40"
        app:bl_gradient_angle="0"
        app:bl_gradient_endColor="#F02C2C"
        app:bl_gradient_startColor="#FB4A4A" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_17"
        android:includeFontPadding="false"
        android:text="福袋玩法攻略>"
        android:textColor="#F33333"
        android:textSize="@dimen/sp_12" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_17"
        android:includeFontPadding="false"
        android:text="未领取的福袋，将于24小时后发起退款"
        android:textColor="#6B6B6B"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
