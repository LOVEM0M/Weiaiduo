<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,RtlSymmetry">

    <View
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:background="@drawable/shape_sign_in_bg1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_13"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="@id/top_bg">

        <LinearLayout
            android:id="@+id/ll_goback"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/left_arrow_white" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="每日签到"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="积分商城"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_29"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:gravity="center"
            android:text="我的积分："
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:background="@drawable/shape_home_bg6"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_9"
            android:paddingVertical="9.5dp"
            android:text="1"
            android:textColor="#F31822"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:background="@drawable/shape_home_bg6"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_9"
            android:paddingVertical="9.5dp"
            android:text="1"
            android:textColor="#F31822"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:background="@drawable/shape_home_bg6"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_9"
            android:paddingVertical="9.5dp"
            android:text="6"
            android:textColor="#F31822"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2"
            android:background="@drawable/shape_home_bg6"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_9"
            android:paddingVertical="9.5dp"
            android:text="0"
            android:textColor="#F31822"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:text="分"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sign_in_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/shape_sign_in_bg2"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_11"
        app:layout_constraintTop_toBottomOf="@id/ll_my_integral">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已连续签到3天"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_sign_in_bg3"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp_7"
                android:paddingLeft="@dimen/dp_7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_4"
                    android:gravity="center"
                    android:text="关闭提醒"
                    android:textColor="#9A9A9A"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_bg7"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_7"
                    android:text="开启提醒"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/item_sign_in"/>
        <FrameLayout
            android:id="@+id/normal_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <include layout="@layout/layout_refresh" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_im_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_home_bg7"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_7"
        android:paddingVertical="@dimen/dp_15"
        android:text="立即签到"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        app:layout_constraintTop_toBottomOf="@id/ll_sign_in_detail" />

    <LinearLayout
        android:id="@+id/ll_sin_in_problem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_im_sign_in">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_weight="1"
            android:background="#E6E6E6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="签到问题"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_weight="1"
            android:background="#E6E6E6" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_retroactive_problem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_19"
        android:text="·关于补签问题"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/ll_sin_in_problem_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_9"
        android:text="关于补签问题关于补签问题关于补签问题关于补签问题关于补签问题关于补签问题关于补签问题关于补签问题"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_retroactive_problem_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
