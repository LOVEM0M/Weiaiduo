<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/title_bar" />

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_15"
        app:rightPadding="@dimen/dp_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="推送消息"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <com.miyin.zhenbaoqi.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_14"
            app:sb_show_indicator="false" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:id="@+id/fl_cache"
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:leftPadding="@dimen/dp_15"
        app:rightPadding="@dimen/dp_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_14"
            android:gravity="center_vertical"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            tools:text="0.0M" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <com.miyin.zhenbaoqi.widget.LineFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        app:leftPadding="@dimen/dp_15"
        app:rightPadding="@dimen/dp_12">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="当前版本"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_14"
            android:gravity="center_vertical"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            tools:text="v1.0.0" />

    </com.miyin.zhenbaoqi.widget.LineFrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_agreement"
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableEnd="@drawable/ic_right_arrow_small"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_15"
        android:text="用户协议"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_privacy_protocol"
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:drawableEnd="@drawable/ic_right_arrow_small"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_15"
        android:text="隐私政策"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_log_out"
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FE4E4E"
        android:textSize="@dimen/sp_15" />

</LinearLayout>
