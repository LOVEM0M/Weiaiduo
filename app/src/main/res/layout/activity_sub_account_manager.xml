<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chat_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <com.miyin.zhenbaoqi.widget.CircleImageView
            android:id="@+id/iv_chat_avatar"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginStart="@dimen/dp_15"
            android:src="#EBEBEB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="聊天"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/iv_chat_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_chat_avatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_chat_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="暂未设置账号"
            android:textColor="#E83A39"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_chat_avatar"
            app:layout_constraintLeft_toRightOf="@+id/iv_chat_avatar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/ic_right_arrow_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ship_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white">

        <com.miyin.zhenbaoqi.widget.CircleImageView
            android:id="@+id/iv_ship_avatar"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginStart="@dimen/dp_15"
            android:src="#EBEBEB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="发货"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/iv_ship_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_ship_avatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ship_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="暂未设置账号"
            android:textColor="#E83A39"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_ship_avatar"
            app:layout_constraintLeft_toRightOf="@+id/iv_ship_avatar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/ic_right_arrow_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_goods_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white">

        <com.miyin.zhenbaoqi.widget.CircleImageView
            android:id="@+id/iv_goods_avatar"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginStart="@dimen/dp_15"
            android:src="#EBEBEB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="商品"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/iv_goods_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_goods_avatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_goods_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="暂未设置账号"
            android:textColor="#E83A39"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_goods_avatar"
            app:layout_constraintLeft_toRightOf="@+id/iv_goods_avatar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/ic_right_arrow_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
