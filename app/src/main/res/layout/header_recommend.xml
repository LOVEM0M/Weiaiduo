<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_158"
        app:delay_time="3000"
        app:image_scale_type="center_crop"
        app:indicator_drawable_selected="@drawable/shape_white_circle"
        app:indicator_drawable_unselected="@drawable/white_radius" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/white"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:drawableStart="@drawable/ic_home_header_first"
            android:drawablePadding="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="真品保证"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableStart="@drawable/ic_home_header_second"
            android:drawablePadding="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="源头价格"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_home_header_third"
            android:drawablePadding="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="假一赔万"
            android:textColor="@color/text_88"
            android:textSize="@dimen/sp_12" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_24"
            android:drawableEnd="@drawable/ic_right_arrow_gold"
            android:drawablePadding="@dimen/dp_1"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="详情"
            android:textColor="#B38237"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_treasure_market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_treasure_market"
            android:gravity="center_horizontal"
            android:text="珍品市场"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_leak_detection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_fast_leak_detection"
            android:gravity="center_horizontal"
            android:text="极速捡漏"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_preferred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_player_shop"
            android:gravity="center_horizontal"
            android:text="玩家优店"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_auction_record_recommend"
            android:gravity="center_horizontal"
            android:text="掌掌眼力"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

    </LinearLayout>

    <com.noober.background.view.BLConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        app:bl_corners_radius="@dimen/dp_4"
        app:bl_solid_color="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:text="精选内容"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_jian_lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:background="@drawable/ic_jianlou"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_jian_bao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_jianbao"
            app:layout_constraintLeft_toLeftOf="@id/iv_jian_lou"
            app:layout_constraintTop_toBottomOf="@id/iv_jian_lou" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_qi_pai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_qipai"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_jian_lou" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_te_mai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_temai"
            app:layout_constraintRight_toRightOf="@id/iv_qi_pai"
            app:layout_constraintTop_toBottomOf="@id/iv_qi_pai" />

    </com.noober.background.view.BLConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_goods_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="热门直播"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_goods_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"
        tools:itemCount="6"
        tools:listitem="@layout/item_header_live" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="新人福利"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_welfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_home_welfare_new" />

    <com.noober.background.view.BLFrameLayout
        android:id="@+id/fl_live_line"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_9"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/dp_3"
        app:bl_solid_color="#E4E4E4">

        <com.noober.background.view.BLView
            android:id="@+id/view_live_line"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_3"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_solid_color="@color/text_33" />

    </com.noober.background.view.BLFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_2"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="猜你喜欢"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_1"
            android:includeFontPadding="false"
            android:text="逛一逛 挑精选好货"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <com.noober.background.view.BLFrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_241"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_5"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_gradient_endColor="@color/text_ef0025"
        app:bl_gradient_startColor="#FC863E">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_16"
            android:drawableStart="@drawable/ic_like"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="为您推荐"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_13"
            android:gravity="center"
            android:text="换一换"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:bl_corners_radius="@dimen/dp_20"
            app:bl_stroke_color="@color/white"
            app:bl_stroke_width="@dimen/dp_1" />

        <com.miyin.zhenbaoqi.widget.flow_layout.TagFlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_44" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_22"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </com.noober.background.view.BLFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f5"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="推荐店铺"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_1"
            android:includeFontPadding="false"
            android:text="精选店铺  等你来挑"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.noober.background.view.BLTextView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_18"
            android:gravity="center"
            android:text="更多店铺"
            android:textColor="#EF0020"
            android:textSize="@dimen/sp_11"
            app:bl_corners_radius="@dimen/dp_2"
            app:bl_stroke_color="#EF0025"
            app:bl_stroke_width="@dimen/dp_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f5"
        android:orientation="vertical"
        android:visibility="gone">

        <com.noober.background.view.BLConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_280"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_11"
            app:bl_corners_radius="@dimen/dp_7"
            app:bl_solid_color="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cover"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/text_33" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toRightOf="@id/iv_cover"
                app:layout_constraintTop_toTopOf="@id/iv_cover"
                tools:text="捞面和田玉工作室" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_warranty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_3"
                android:drawableStart="@drawable/ic_auction_warranty"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="#B1B1B1"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover"
                app:layout_constraintLeft_toLeftOf="@id/tv_shop_name"
                tools:text="质保金：20800" />

            <com.noober.background.view.BLTextView
                android:id="@+id/tv_attention"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:bl_corners_radius="@dimen/dp_26"
                app:bl_solid_color="#E93B44"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_attention_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_4"
                android:includeFontPadding="false"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_10"
                app:layout_constraintRight_toRightOf="@id/tv_attention"
                app:layout_constraintTop_toBottomOf="@id/tv_attention"
                tools:text="100人关注" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_23"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/iv_cover" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_20"
                android:drawableEnd="@drawable/ic_right_arrow_preferred"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="共160件宝贝，快去看看" />

        </com.noober.background.view.BLConstraintLayout>

        <com.noober.background.view.BLFrameLayout
            android:id="@+id/fl_shop_line"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_9"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_solid_color="#E4E4E4">

            <com.noober.background.view.BLView
                android:id="@+id/view_shop_line"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_3"
                app:bl_corners_radius="@dimen/dp_3"
                app:bl_solid_color="@color/text_33" />

        </com.noober.background.view.BLFrameLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:text="好物推荐"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_20" />

</LinearLayout>
