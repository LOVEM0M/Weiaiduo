<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:bl_corners_topLeftRadius="@dimen/dp_10"
    app:bl_corners_topRightRadius="@dimen/dp_10"
    app:bl_solid_color="#F7F6FB"
    tools:ignore="HardcodedText,RtlSymmetry">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center"
        android:text="请选择支付方式"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_balance_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableStart="@drawable/ic_wait_pay"
        android:drawablePadding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="余额支付"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_solid_color="@color/white" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_ali_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableStart="@drawable/ic_ali_pay"
        android:drawablePadding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="支付宝支付"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_solid_color="@color/white" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_wx_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableStart="@drawable/ic_wx_pay"
        android:drawablePadding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="微信支付"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_solid_color="@color/white" />

</com.noober.background.view.BLLinearLayout>
