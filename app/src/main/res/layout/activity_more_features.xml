<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f5"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/title_bar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="店铺工具"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_live"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_live"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_14"
            android:text="立即直播"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_release_goods"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_release_goods"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_14"
            android:text="发布商品"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bind_lucky_bag"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_bind_lucky_bag"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="绑粉福袋"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_business_school"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_business_school"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="商学院"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_video_manager"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_video_manager"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="视频管理"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_material_manager"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_material_manager"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="素材管理"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="拓展工具"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_shop_confirm"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_shop_confirm"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="店铺核实"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_black_list"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_black_list"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="黑名单管理"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_activity_sign_up"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_activity_sign_up"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="活动报名"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_account"
            style="@style/RippleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_sub_account"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_10"
            android:text="子账号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>
