<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_92">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_13"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@color/text_33" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@id/iv_avatar"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar"
                    tools:text="捞面和田玉工作室" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_35"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_13"
                    app:layout_constraintLeft_toLeftOf="@id/tv_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="捞面和田玉工作室" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text="立即评价"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@color/line_eb" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_156">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="@dimen/dp_125"
                    android:layout_height="@dimen/dp_125"
                    android:layout_marginStart="@dimen/dp_15"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@color/text_33" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintLeft_toRightOf="@id/iv_cover"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_cover"
                    tools:text="商品 名字商品 名字商品 名字商品 名字商品 名字商品 名字" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="@id/iv_cover"
                    app:layout_constraintLeft_toLeftOf="@id/tv_goods_name"
                    tools:text="¥0.01" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:includeFontPadding="false"
                    android:text="数量x1"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="@id/iv_cover"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text="立即评价"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15" />

            <com.miyin.zhenbaoqi.widget.flow_layout.TagFlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:includeFontPadding="false"
                android:text="店铺评分"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="描述相符"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_12" />

                <com.miyin.zhenbaoqi.widget.StarBar
                    android:id="@+id/star_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_5"
                    app:starEmpty="@drawable/ic_star_normal"
                    app:starFill="@drawable/ic_star_select"
                    app:starSize="@dimen/dp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_desc_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="0分"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="服务态度"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_12" />

                <com.miyin.zhenbaoqi.widget.StarBar
                    android:id="@+id/star_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_5"
                    app:starEmpty="@drawable/ic_star_normal"
                    app:starFill="@drawable/ic_star_select"
                    app:starSize="@dimen/dp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="0分"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="物流服务"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_12" />

                <com.miyin.zhenbaoqi.widget.StarBar
                    android:id="@+id/star_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    app:starCount="5"
                    app:starDistance="@dimen/dp_5"
                    app:starEmpty="@drawable/ic_star_normal"
                    app:starFill="@drawable/ic_star_select"
                    app:starSize="@dimen/dp_20" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:text="0分"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <com.noober.background.view.BLButton
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="立即点评"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                app:bl_corners_radius="@dimen/dp_3"
                app:bl_solid_color="#E83A39" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
