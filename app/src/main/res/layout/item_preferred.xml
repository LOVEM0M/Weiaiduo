<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_256"
    android:layout_marginStart="@dimen/dp_7"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    app:bl_corners_radius="@dimen/dp_8"
    app:bl_solid_color="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_41"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/text_33" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:text="鸿记珠宝品牌" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:includeFontPadding="false"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="厚道营商，取利收益" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_attention"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_6"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="+ 关注"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:bl_corners_radius="@dimen/dp_26"
        app:bl_solid_color="#E93B44"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_attention_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_6"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_8"
        app:layout_constraintRight_toRightOf="@id/tv_attention"
        app:layout_constraintTop_toBottomOf="@id/tv_attention"
        tools:text="100人关注" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_101"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_middle"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        tools:background="@color/text_33" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_left"
        app:layout_constraintRight_toRightOf="@id/iv_left"
        app:layout_constraintTop_toBottomOf="@id/iv_left"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_left_title"
        app:layout_constraintTop_toBottomOf="@id/tv_left_title"
        tools:text="9800.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_middle"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_101"
        app:layout_constraintLeft_toRightOf="@id/iv_left"
        app:layout_constraintRight_toLeftOf="@id/iv_right"
        app:layout_constraintTop_toTopOf="@id/iv_left" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_middle_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_middle"
        app:layout_constraintRight_toRightOf="@id/iv_middle"
        app:layout_constraintTop_toBottomOf="@id/iv_middle"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_middle_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_middle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_middle_title"
        tools:text="9800.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_101"
        app:layout_constraintLeft_toRightOf="@id/iv_middle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_left" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/iv_right"
        app:layout_constraintRight_toRightOf="@id/iv_right"
        app:layout_constraintTop_toBottomOf="@id/iv_right"
        tools:text="缅甸天然翡翠A货雪" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:includeFontPadding="false"
        android:textColor="#E90428"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_right_title"
        app:layout_constraintTop_toBottomOf="@id/tv_right_title"
        tools:text="9800.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_14"
        android:drawableEnd="@drawable/ic_right_arrow_preferred"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="共160件宝贝，快去看看" />

</com.noober.background.view.BLConstraintLayout>
