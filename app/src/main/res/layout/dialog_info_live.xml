<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.noober.background.view.BLConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/bg_f5"
        app:bl_corners_topLeftRadius="@dimen/dp_5"
        app:bl_corners_topRightRadius="@dimen/dp_5"
        app:bl_solid_color="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/info_close"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/live_close"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:textColor="@color/text_black_29"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="缅甸鼋头渚包" />

        <LinearLayout
            android:id="@+id/ll_info_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:textColor="#828282"
                android:textSize="@dimen/sp_13"
                tools:text="店铺保证金" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_26"
                android:layout_gravity="center_vertical"
                android:background="@color/line_eb" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:textColor="#828282"
                android:textSize="@dimen/sp_13"
                tools:text="粉丝" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_26"
                android:layout_gravity="center_vertical"
                android:background="@color/line_eb" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:textColor="#828282"
                android:textSize="@dimen/sp_13"
                tools:text="评分" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="@color/text_gray_9e"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_info_money"
            tools:text="缅甸鼋头渚包" />

    </com.noober.background.view.BLConstraintLayout>

    <com.miyin.zhenbaoqi.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/group_icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1" />

</FrameLayout>

