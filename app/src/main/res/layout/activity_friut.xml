<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_friut_bg"
    tools:ignore="HardcodedText,RtlSymmetry">

    <ImageView
        android:id="@+id/iv_dynamic"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_45"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dynamic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="动态"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_dynamic"
        app:layout_constraintStart_toStartOf="@id/iv_dynamic"
        app:layout_constraintTop_toBottomOf="@id/iv_dynamic" />

    <ImageView
        android:id="@+id/iv_friend_support"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_friend_support"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friend_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="好友助力"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_friend_support"
        app:layout_constraintStart_toStartOf="@id/iv_friend_support"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_support" />

    <ImageView
        android:id="@+id/iv_success_record"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_success_record"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_support" />

    <TextView
        android:id="@+id/tv_success_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="成功记录"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_success_record"
        app:layout_constraintStart_toStartOf="@id/iv_success_record"
        app:layout_constraintTop_toBottomOf="@id/iv_success_record" />

    <ImageView
        android:id="@+id/iv_big_tree"
        android:layout_width="@dimen/dp_272"
        android:layout_height="@dimen/dp_352"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_marginRight="@dimen/dp_44"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_big_tree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_young_tree"
        android:layout_width="@dimen/dp_135"
        android:layout_height="@dimen/dp_176"
        android:layout_marginTop="@dimen/dp_334"
        android:layout_marginRight="@dimen/dp_229"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_young_tree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sprout"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_11"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_sprout"
        app:layout_constraintBottom_toBottomOf="@id/iv_young_tree"
        app:layout_constraintLeft_toLeftOf="@id/iv_young_tree" />

    <ImageView
        android:id="@+id/iv_water_drop"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_77"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_water_drop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_big_tree" />

    <TextView
        android:id="@+id/tv_water_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领水滴"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/shape_friut_bg1"
        android:paddingVertical="@dimen/dp_3"
        android:paddingHorizontal="@dimen/dp_21"
        app:layout_constraintEnd_toEndOf="@id/iv_water_drop"
        app:layout_constraintStart_toStartOf="@id/iv_water_drop"
        app:layout_constraintBottom_toBottomOf="@id/iv_water_drop" />
    <TextView
        android:id="@+id/tv_kettle"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_78"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_friut_bg2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_big_tree" />
    <ImageView
        android:id="@+id/iv_kettle"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_kettle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_big_tree" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/tv_water_drop">
        <include layout="@layout/item_friut_friend"/>
    </LinearLayout>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/tv_water_drop"/>
-->

</androidx.constraintlayout.widget.ConstraintLayout>
