<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry">

    <include layout="@layout/title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_342"
                app:delay_time="3000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14"
                    tools:text="缅甸鸿记天然翡翠A货18K白金镶钻阳绿项链吊坠原创手工制作礼物" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_collect"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="收藏"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="9800"
                    android:textColor="#EF303D"
                    android:textSize="@dimen/sp_25" />

                <com.noober.background.view.BLTextView
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_14"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="赚 588"
                    android:textColor="#B77B40"
                    android:textSize="@dimen/sp_12"
                    app:bl_corners_radius="@dimen/dp_4"
                    app:bl_solid_color="#F0E3C8" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_14"
                    android:includeFontPadding="false"
                    android:text="库存剩余：1件"
                    android:textColor="#B6B6B6"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/sp_12"
                tools:text="¥10800" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/white">

                <com.miyin.zhenbaoqi.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_59"
                    android:layout_height="@dimen/dp_59"
                    android:layout_marginStart="@dimen/dp_11" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_83"
                    android:layout_marginTop="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:textColor="#141414"
                    android:textSize="@dimen/sp_16"
                    tools:text="玉茗堂工作室" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_83"
                    android:layout_marginTop="@dimen/dp_30"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12"
                    tools:text="主营翡翠" />

                <com.noober.background.view.BLTextView
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="进店逛逛"
                    android:textColor="#E12926"
                    android:textSize="@dimen/sp_12"
                    app:bl_corners_radius="@dimen/dp_22"
                    app:bl_stroke_color="#E12926"
                    app:bl_stroke_width="@dimen/dp_1" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/line_eb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_warranty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="质保金"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_shop_impression"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="店铺印象"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_attention_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="关注数"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/bg_f5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_18"
                android:text="商品描述"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_5"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12"
                tools:text="鸿记特缅甸天然翡翠A货18K白金向阳绿项链吊坠原创手工制作礼物" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/line_eb" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_18"
                android:text="商品详情"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_262"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_7"
                android:layout_marginStart="@dimen/dp_7" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:elevation="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="编辑"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="继续发布"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_10" />

        <com.noober.background.view.BLTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_85"
            android:text="分享给买家"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:bl_corners_radius="@dimen/dp_3"
            app:bl_solid_color="#E93B44" />

    </LinearLayout>

</LinearLayout>
